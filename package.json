{
  "name": "@baikenlabs/weaver",
  "version": "0.0.5",
  "description": "A lightweight dependency injection container for AWS Lambda and Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "pack:local": "npm pack",
    "publish:dry": "npm publish --dry-run",
    "publish:npm": "npm publish",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepare": "husky"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "container",
    "lambda",
    "aws",
    "serverless",
    "ioc",
    "command-pattern",
    "proxy-facade",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/baikenlabs/weaver.git"
  },
  "bugs": {
    "url": "https://github.com/baikenlabs/weaver/issues"
  },
  "homepage": "https://github.com/baikenlabs/weaver#readme",
  "author": "Baiken Labs",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
